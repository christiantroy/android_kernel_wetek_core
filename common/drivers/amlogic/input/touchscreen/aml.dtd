		touch_ft5x06:ft5x06{
			touch_name = "ft5x06";
			status = "okay";
			i2c_bus = "i2c_bus_a";
			reg = <0x38>;
			ic_type = <0>;
			irq = <0>;
			gpio_interrupt = "GPIOZ_7";
			gpio_reset = "GPIOZ_6";
			xres = <1024>;
			yres = <600>;
			pol = <0x1>;
			fw_file = "/etc/touch/ft5x06.fw";
						
		};
#endif

